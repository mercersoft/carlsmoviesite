rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Movies collection - public read access
    match /movies/{movieId} {
      allow read: if true;  // Anyone can read movies
      allow create: if request.auth != null;  // Authenticated users can add movies (from TMDB during review import)
      allow update, delete: if false; // Only server/admin can modify/delete
    }

    // Users collection
    match /users/{userId} {
      allow read: if request.auth != null;  // Authenticated users can read
      allow write: if request.auth != null && request.auth.uid == userId;  // Users can only write their own data
    }

    // Reviews collection (if you add it later)
    match /reviews/{reviewId} {
      allow read: if true;  // Anyone can read reviews
      allow create: if request.auth != null;  // Authenticated users can create
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.userId;  // Users can only modify their own reviews
    }
  }
}
